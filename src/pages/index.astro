---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="center">
			<h1>welcome to spencer town</h1>
			<div class="row">
				<a class="button" href="/about" style="background-color:var(--blue);">about</a>
				<a class="button" href="/projects" style="background-color:var(--green);">projects</a>
				<a class="button" href="/blog" style="background-color:var(--pink);">blog</a>
			</div>
		</div>
	</body>
</html>

<style>
	.center {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 90vh;
		overflow: hidden;
	}

	.row {
		display: flex;
		flex-direction: column;

		a {
			margin-bottom: 15px;
		}
	}

	h1 {
		color: var(--beige);
		font-size: 3rem;
		text-align: center;
		font-weight: 800;
		font-style: italic;
	}

	@media (min-width: 600px) {
		h1 {
			font-size: 5rem;
		}

		.row {
			flex-direction: row;
		}

		a {
			margin-right: 25px;
		}
	}

</style>